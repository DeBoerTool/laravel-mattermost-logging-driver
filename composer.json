{
    "name": "dbt/laravel-mattermost-logging-driver",
    "description": "A log driver for Mattermost",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.1.0",
        "laravel/framework": "^6.0",
        "thibaud-dauce/mattermost-php": "^1.2",
        "monolog/monolog": "^1.23",
        "coduo/php-to-string": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.0",
        "dbt/phpunit-runner": "^0.1.2"
    },
    "authors": [
        {
            "name": "Thibaud Dauce",
            "email": "thibaud.dauce@pm.me"
        },
        {
            "name": "Daniel S. Deboer",
            "email": "daniel.s.deboer@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dbt\\Mattermost\\Logger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbt\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/dbt/phpunit-runner/phpunit.php --configuration=phpunit.xml.dist"
    }
}
