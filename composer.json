{
    "name": "dbt/laravel-mattermost-logging-driver",
    "description": "A log driver for Mattermost",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.2.5",
        "laravel/framework": "^7.0",
        "thibaud-dauce/mattermost-php": "^1.3",
        "monolog/monolog": "^2.0",
        "coduo/php-to-string": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "authors": [
        {
            "name": "Thibaud Dauce",
            "email": "thibaud.dauce@pm.me"
        },
        {
            "name": "Daniel S. Deboer",
            "email": "daniel.s.deboer@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dbt\\Mattermost\\Logger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbt\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration=phpunit.xml.dist"
    }
}
